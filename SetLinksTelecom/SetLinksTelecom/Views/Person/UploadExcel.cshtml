@if (Model.Count > 0)
{
    <table id="personTable" class="table table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Father Name</th>
            <th>CNIC</th>
            <th>CNICIssueDate</th>
            <th>DateofBirth</th>
            <th>Designation</th>
            <th>Gender</th>
            <th>Qualification</th>
            <th>CurrentAddress</th>
            <th>PermanentAddress</th>
            <th>MobileBusiness</th>
            <th>BusinessLine</th>
            <th>MobilePersonal</th>
            <th>PersonalLine</th>
        </tr>
        </thead>
        <tbody>
        @foreach (DtoPersonExcel p in Model)
        {
            <tr data-toggle="tooltip" data-html="true" data-placement="bottom" title="@p.ErrorMessage">
                <td>@p.Name</td>
                <td>@p.FatherName</td>
                <td>@p.CNIC</td>
                <td>@p.CNICIssueDate</td>
                <td>@p.DOB</td>
                <td>@p.Designation</td>
                <td>@p.Gender</td>
                <td>@p.Qualification</td>
                <td>@p.CurrentAddress</td>
                <td>@p.PermanentAddress</td>
                <td>@p.MobileBusiness</td>
                <td>@p.BusinessLine</td>
                <td>@p.MobilePersonal</td>
                <td>@p.PersonalLine</td>

            </tr>
        }
        </tbody>
    </table>
}

