@using SetLinksTelecom.DTO
@model List<SetLinksTelecom.DTO.DtoPersonExcel>
@{
    ViewBag.Title = "PersonExcel";
    if (Session["userName"] == null)
    {
        Response.Redirect("~/User/Login");
    }
}

