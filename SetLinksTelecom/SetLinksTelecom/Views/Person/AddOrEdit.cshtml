@model SetLinksTelecom.Models.Person
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Person", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(m => m.PersonId)
    @Html.HiddenFor(m => m.AccString)
    @Html.HiddenFor(m => m.BossId)

    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.FatherName, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.FatherName, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.FatherName)
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.CNIC, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.CNIC, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.CNIC)
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.CNICIssueDate, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.CNICIssueDate, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.DOB, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.DOB, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.DesignationId, new { @class = "col-form-label col-form-label-sm" })
                @Html.DropDownListFor(m => m.DesignationId, new SelectList(Model.Designations, "Id", "Name"), "Select Designation", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(m => m.DesignationId)
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.Gender, new { @class = "col-form-label col-form-label-sm" })
                @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{
                    new SelectListItem{ Text="Male", Value="Male"},
                    new SelectListItem{ Text="Female", Value="Female"}
                }, "Select Gender", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(m => m.Gender)
            </div>
        </div>
        
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.Qualification, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.Qualification, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            </div>
        </div>
        

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.CurrentAddress, new { @class = "col-form-label col-form-label-sm" })
                @Html.TextAreaFor(m => m.CurrentAddress, new { @class = "form-control form-control-sm" })
            </div>
        </div>

        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentAddress, new { @class = "col-form-label col-form-label-sm" })
                @Html.TextAreaFor(m => m.PermanentAddress, new { @class = "form-control form-control-sm" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.MobileBusiness, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.MobileBusiness, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.MobileBusiness)
            </div>
        </div>
        <div class="col">
            <div class="form-group line">
                @Html.LabelFor(m => m.BusinessLineMap, new { @class = "col-form-label col-form-label-sm" })
                @Html.DropDownListFor(m => m.BusinessLineMap, new SelectList(Model.Lines, "LineId", "Name"), "Select Line", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(m => m.BusinessLineMap)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="form-group">
                @Html.LabelFor(m => m.MobilePersonal, new { @class = "col-form-label col-form-label-sm" })
                @Html.EditorFor(m => m.MobilePersonal, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(m => m.MobilePersonal)
            </div>
        </div>
        <div class="col">
            <div class="form-group line">
                @Html.LabelFor(m => m.PersonalLineMap, new { @class = "col-form-label col-form-label-sm" })
                @Html.DropDownListFor(m => m.PersonalLineMap, new SelectList(Model.Lines, "LineId", "Name"), "Select Line", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(m => m.PersonalLineMap)
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" value="Submit" class="btn btn-primary"><i class="fa fa-save"></i> Submit</button>
        <button type="reset" value="Reset" class="btn btn-warning"><i class="fa fa-refresh"></i> Reset</button>
    </div>
}
