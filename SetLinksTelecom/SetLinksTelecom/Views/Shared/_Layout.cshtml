<nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="padding-left: 50px;padding-right: 50px;">
    <a class="navbar-brand" href="#">Set Links Telecom</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item @Html.IsActiveLink(actions: "Index", controllers: "Home")">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item @Html.IsActiveLink(actions: "Index", controllers: "Designation")">
                @Html.ActionLink("Designation", "Index", "Designation", null, new { @class = "nav-link"})
            </li>
            <li class="nav-item @Html.IsActiveLink(actions: "Index", controllers: "Person")">
                @Html.ActionLink("Person", "Index", "Person", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item @Html.IsActiveLink(actions: "Index", controllers: "Item")">
                @Html.ActionLink("Items", "Index", "Item", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item  @Html.IsActiveLink(actions: "About", controllers: "Home")">
                @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item  @Html.IsActiveLink(actions: "Contact", controllers: "Home")">
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
<div class="container body-content" style="margin-top: 10px;">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Set Links Telecom</p>
    </footer>
</div>

